```{r setup, include=FALSE}
knitr::opts_chunk$set(echo = FALSE)
library(tidyverse)
library(readr)
library(dplyr)
library(lubridate)

# Learn more about creating websites with Distill at:
# https://rstudio.github.io/distill/website.html

# Learn more about publishing to GitHub Pages at:
# https://rstudio.github.io/distill/publish_website.html#github-pages

covid_cases<-"owid-covid-data.csv"
firstgraph<-read_csv(covid_cases) %>% filter(iso_code=="IND")%>% group_by(new_cases,date) %>%   group_by(month=floor_date(date, "month")) %>%
   summarize(new_cases=sum(new_cases))
view(firstgraph)

population<-"covid19countryinfo.csv"
View(read_csv(population))
secondgraph<-read_csv(population)%>% filter(alpha2code=="US") %>% 
  ggplot(aes(x=alpha2code,y=density))+geom_point()
secondgraph



```
```{r}
ggplot(firstgraph,aes(x=month,y=new_cases)) + geom_line() + labs(x="Month",y="New Cases", caption="Source: Kaggle.com")
```

